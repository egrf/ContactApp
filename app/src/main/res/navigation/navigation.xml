<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.egrf.contactsapp.ui.features.main.MainFragment"
        android:label="ContactApp">
        <action
            android:id="@+id/navigateToContactDetails"
            app:destination="@id/contactDetailsFragment"/>
    </fragment>
    <fragment
        android:id="@+id/contactDetailsFragment"
        android:name="com.egrf.contactsapp.ui.features.details.ContactDetailsFragment"
        android:label="Contact Details"
        tools:layout="@layout/fragment_contact_details" />
</navigation>
